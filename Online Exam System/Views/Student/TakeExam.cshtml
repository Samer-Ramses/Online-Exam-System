@using Online_Exam_System.ViewModels;
@model TakeExamViewModel

@{
    ViewData["Title"] = "Start new exam";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h4 class="alert alert-primary" role="alert">Take Exam</h4>
        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"] </span>
            </div>
        }

        <div class="row p-3 justify-content-center" style="background: #f4f4f4; border-radius: 15px">
            <div class="col-md-10">
                <form asp-action="TakeExam" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group m-3">
                        <label asp-for="ExamCode" class="control-label"></label>
                        <input asp-for="ExamCode" class="form-control" />
                        <span asp-validation-for="ExamCode" class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex justify-content-center gap-1">
                        <input class="btn btn-outline-success float-right" type="submit" value="Start" />
                        <a class="btn btn-outline-secondary" asp-controller="Student" asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
