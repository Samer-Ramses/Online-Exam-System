@using Online_Exam_System.ViewModels;

@model AddQuestionViewModel

<div class="row justify-content-center">
    <div class="col-md-6">
        <h4 class="alert alert-primary" role="alert">Add new question</h4>
        @if (TempData["Error"] != null)
        {
                <div class="col-md-12 alert alert-danger">
                    <span><b>Sorry!</b> - @TempData["Error"] </span>
                </div>
        }

        <div class="row p-3 justify-content-center" style="background: #f4f4f4; border-radius: 15px">
            <div class="col-md-10">
                <form asp-action="AddQuestionForm">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group m-3">
                        <label asp-for="QuestionText" class="control-label"></label>
                        <input asp-for="QuestionText" class="form-control" />
                        <span asp-validation-for="QuestionText" class="text-danger"></span>
                    </div>
                    <div class="form-group m-3">
                        <label asp-for="QuestionPoints" class="control-label"></label>
                        <input asp-for="QuestionPoints" type="number" class="form-control" />
                        <span asp-validation-for="QuestionPoints" class="text-danger"></span>
                    </div>
                    <div class="form-group m-3">
                        <label asp-for="OptionsNumber" class="control-label"></label>
                        <input asp-for="OptionsNumber" type="number" class="form-control" />
                        <span asp-validation-for="OptionsNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex justify-content-center gap-1">
                        <input class="btn btn-outline-success float-right" type="submit" value="Add" />
                        <a class="btn btn-outline-secondary" asp-controller="Instructor" asp-action="CurrentExams">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
