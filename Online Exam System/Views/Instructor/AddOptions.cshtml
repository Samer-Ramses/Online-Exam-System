@using Online_Exam_System.ViewModels;

@model AddOptionsViewModel

<div class="row justify-content-center">
    <div class="col-md-6">
        <h4 class="alert alert-primary" role="alert">Add Options</h4>
        <p class="alert alert-primary" role="alert"></p>
        @if (TempData["Error"] != null)
        {
                    <div class="col-md-12 alert alert-danger">
                        <span><b>Sorry!</b> - @TempData["Error"] </span>
                    </div>
        }

        <div class="row p-3 justify-content-center" style="background: #f4f4f4; border-radius: 15px">
            <div class="col-md-10">
                <form asp-action="AddOptions">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @for (var i = 0; i < Model.Options.Count; i++)
                    {
                        <div class="form-group m-3">
                            <label asp-for="Options[i].OptionText" class="control-label"></label>
                            <input asp-for="Options[i].OptionText" class="form-control" />
                            <span asp-validation-for="Options[i].OptionText" class="text-danger"></span>
                        </div>
                    }
                    <div class="form-group m-3">
                        <label asp-for="CorrectAnswer" class="control-label"></label>
                        <input asp-for="CorrectAnswer" type="number" class="form-control" />
                        <span asp-validation-for="CorrectAnswer" class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex justify-content-center gap-1">
                        <input class="btn btn-outline-success float-right" type="submit" value="Add" />
                        <a class="btn btn-outline-secondary" asp-controller="Instructor" asp-action="CurrentExams">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>